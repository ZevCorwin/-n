	<!-- Checkout Section -->
	<div class="container mt-5">
		<h1>Checkout</h1>
		<form action="/checkout" method="POST">
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="city">Tỉnh/Thành Phố:</label>
						<input type="text" class="form-control" id="city" name="city" required>
					</div>
					<div class="form-group">
						<label for="address">Địa chỉ:</label>
						<input type="text" class="form-control" id="address" name="address" required>
					</div>
					<div class="form-group">
						<label for="phone">Số điện thoại:</label>
						<input type="tel" class="form-control" id="phone" name="phone" required>
					</div>
					<div class="form-group">
						<label for="coupon">Mã giảm giá:</label>
						<input type="text" class="form-control" id="coupon" name="coupon">
					</div>
					<div class="form-group">
						<label for="paymentMethod">Phương thức thanh toán:</label>
						<select class="form-control" id="paymentMethod" name="paymentMethod" required>
							<option value="cash">Thanh toán bằng tiền mặt</option>
							<option value="momo" disabled>Thanh toán bằng MoMo</option>
							<option value="bank" disabled>Thanh toán qua ngân hàng</option>
						</select>
					</div>
				</div>
				<div class="col-md-6">
					<h2>Mặt hàng cần thanh toán</h2>
					<ul class="list-group">
						<% cart.items.forEach(function(item) { %>
							<% if (item.productId) { %>
								<li class="list-group-item d-flex justify-content-between align-items-center">
									<div class="media">
										<% if (item.productId.thumbnail) { %>
											<img class="mr-3" src="<%= item.productId.thumbnail %>" alt="Product Image" style="width: 64px; height: 64px;">
										<% } %>
										<div class="media-body">
											<h5 class="mt-0"><%= item.productId.name %></h5>
											<p>Price: $<%= item.productId.price %></p>
											<p>Quantity: <%= item.quantity %></p>
											<p>Total: $<%= item.productId.price * item.quantity %></p>
										</div>
									</div>
								</li>
							<% } %>
						<% }); %>
					</ul>
				</div>
			</div>
			<button type="submit" class="btn btn-primary mt-4">Đặt hàng</button>
		</form>
